{
    "get": {
        "tags": [
            "speakers"
        ],
        "summary": "Gets all the valid steps to be taken on a speaker's participation status on the current event",
        "operationId": "getvalidSpeakerParticipationStatusSteps",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "security": [
            {
              "Bearer": []
            }
          ],
        "parameters": [
            {
                "in": "path",
                "name": "id",
                "description": "ID of the speaker",
                "required": true,
                "type": "string"
            }
        ],
        "responses": {
            "200": {
                "description": "Valid steps",
                "schema": {
                    "type": "object",
                    "properties": {
                        "steps": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "step": {
                                        "type": "integer"
                                    },
                                    "next": {
                                        "type": "string",
                                        "enum": ["SUGGESTED", "SELECTED", "ON_HOLD", "CONTACTED", "IN_CONVERSATIONS", "ACCEPTED", "REJECTED", "GIVEN_UP", "ANNOUNCED"]
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "400": {
                "description": "Speaker without participation on the current event"
            },
            "401": {
                "description": "Unauthorized"
            },
            "404": {
                "description": "Speaker not found"
            }
        }
    }
}