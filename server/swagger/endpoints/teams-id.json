{
    "get": {
        "tags": [
            "teams"
        ],
        "summary": "Get team by ID",
        "operationId": "getTeam",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "security": [
            {
              "Bearer": []
            }
          ],
        "parameters": [
            {
                "in": "path",
                "name": "id",
                "description": "ID of the team",
                "required": true,
				"type": "string"
            }
        ],
        "responses": {
            "200": {
                "description": "Team with the specific ID",
                "schema": {
                    "$ref": "./models/team.json"
                }
            },
            "401": {
                "description": "Unauthorized"
            },
            "404": {
                "description": "Team not found"
            }
        }
    },
    "delete": {
        "tags": [
            "teams"
        ],
        "summary": "Deletes a team (must have admin credentials)",
        "operationId": "deleteTeam",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "security": [
            {
              "Bearer": []
            }
          ],
        "parameters": [
            {
                "in": "path",
                "name": "id",
                "description": "ID of the team",
                "required": true,
				"type": "string"
            }
        ],
        "responses": {
            "200": {
                "description": "Deleted team",
                "schema": {
                    "$ref": "./models/team.json"
                }
            },
            "401": {
                "description": "Unauthorized"
            },
            "404": {
                "description": "Team not found"
            },
            "403": {
                "description": "Valid authorization, but not enough credentials"
            }
        }
    },
    "put": {
        "tags": [
            "teams"
        ],
        "summary": "Updates a teams's name (must have coordinator credentials)",
        "operationId": "updateTeam",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "security": [
            {
              "Bearer": []
            }
          ],
        "parameters": [
            {
                "in": "body",
                "name": "payload",
                "description": "New team data",
                "required": true,
                "schema": {
                    "type": "object",
                    "required": [
                        "name"
                    ],
                    "properties": {
                        "name": {
                            "type": "string"
                        }
                    }
                }
            },
            {
                "in": "path",
                "name": "id",
                "description": "ID of the team",
                "required": true,
				"type": "string"
            }
            
        ],
        "responses": {
            "200": {
                "description": "Updated team",
                "schema": {
                    "$ref": "./models/team.json"
                }
            },
            "400": {
                "description": "Invalid payload, or couldn't update team"
            },
            "401": {
                "description": "Unauthorized"
            },
            "417": {
                "description": "Couldn't find team"
            },
            "403": {
                "description": "Valid authorization, but not enough credentials"
            }
        }
    }
}