{
    "post": {
        "tags": [
            "companies", "packages"
        ],
        "summary": "Adds a package on the current event to a company (must have at least coordination credentails)",
        "operationId": "addCompanyPackage",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "security": [
            {
              "Bearer": []
            }
          ],
        "parameters": [
            {
                "in": "path",
                "name": "id",
                "description": "ID of the company",
                "required": true,
				"type": "string"
            },
            {
                "in": "body",
                "name": "payload",
                "description": "New participation information",
                "required": true,
                "schema": {
                    "type": "object",
                    "required": [
                        "name", "items", "price", "vat"
                    ],
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "items": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "item": {
                                        "type": "string"
                                    },
                                    "quantity": {
                                        "type": "integer"
                                    },
                                    "public": {
                                        "type": "boolean"
                                    }
                                }
                            }
                        },
                        "price": {
                            "type": "integer"
                        },
                        "vat": {
                            "type": "integer"
                        }
                    }
                }
            }
        ],
        "responses": {
            "200": {
                "description": "Updated company",
                "schema": {
                    "$ref": "./models/company.json"
                }
            },
            "400": {
                "description": "Invalid payload"
            },
            "404": {
                "description": "Company not found"
            },
            "401": {
                "description": "Unauthorized"
            },
            "417": {
                "description": "Couldn't add package to company"
            },
            "403": {
                "description": "Valid authorization, but not enough credentials"
            }
        }
    }
}