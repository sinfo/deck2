{
    "post": {
        "tags": [
            "speakers"
        ],
        "summary": "Update speaker's public image by ID (must have at least coordinator credentials)",
        "operationId": "updateSpeakerPublicImage",
        "consumes": [
            "multipart/form-data"
        ],
        "produces": [
            "application/json"
        ],
        "security": [
            {
                "Bearer": []
            }
        ],
        "parameters": [
            {
                "in": "path",
                "name": "id",
                "description": "ID of the speaker",
                "required": true,
                "type": "string"
            },
            {
                "in": "formData",
                "name": "image",
                "type": "file",
                "description": "Photo of speaker"
            }
        ],
        "responses": {
            "200": {
                "description": "Speaker with the updated data",
                "schema": {
                    "$ref": "./models/speaker.json"
                }
            },
            "417": {
                "description": "Unable to perform operation"
            },
            "404": {
                "description": "Speaker not found"
            },
            "401": {
                "description": "Unauthorized"
            },
            "400": {
                "description": "Invalid image data"
            },
            "403": {
                "description": "Valid authorization, but not enough credentials"
            }
        }
    }
}