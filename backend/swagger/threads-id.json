{
    "get": {
        "tags": [
            "threads"
        ],
        "summary": "Get thread by ID",
        "operationId": "getThread",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "security": [
            {
                "Bearer": []
            }
        ],
        "parameters": [
            {
                "in": "path",
                "name": "id",
                "description": "ID of the thread",
                "required": true,
                "type": "string"
            }
        ],
        "responses": {
            "200": {
                "description": "Thread with the specific ID",
                "schema": {
                    "$ref": "./models/thread.json"
                }
            },
            "401": {
                "description": "Unauthorized"
            },
            "404": {
                "description": "Thread not found"
            }
        }
    },
    "put": {
        "tags": [
            "threads"
        ],
        "summary": "Updates a thread. Only valid if you own the thread (or admin)",
        "operationId": "updateThread",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "security": [
            {
                "Bearer": []
            }
        ],
        "parameters": [
            {
                "in": "path",
                "name": "id",
                "description": "ID of the thread",
                "required": true,
                "type": "string"
            },
            {
                "in": "body",
                "name": "payload",
                "description": "Update data",
                "required": true,
                "schema": {
                    "type": "object",
                    "required": [
                        "kind",
                        "meeting (optional)"
                    ],
                    "properties": {
                        "kind": {
                            "type": "string"
                        },
                        "meeting": {
                            "type": "string"
                        }
                    }
                }
            }
        ],
        "responses": {
            "200": {
                "description": "Updated thread",
                "schema": {
                    "$ref": "./models/thread.json"
                }
            },
            "401": {
                "description": "Unauthorized"
            },
            "404": {
                "description": "Thread not found"
            },
            "403": {
                "description": "Authtenticated, but access level is not enough"
            }
        }
    },
    "delete": {
        "tags": [
            "threads"
        ],
        "summary": "Deletes a thread and its comments. Only valid if you own the thread (or admin)",
        "operationId": "deleteThread",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "security": [
            {
                "Bearer": []
            }
        ],
        "parameters": [
            {
                "in": "path",
                "name": "id",
                "description": "ID of the thread",
                "required": true,
                "type": "string"
            }
        ],
        "responses": {
            "200": {
                "description": "Deleted thread",
                "schema": {
                    "$ref": "./models/thread.json"
                }
            },
            "401": {
                "description": "Unauthorized"
            },
            "404": {
                "description": "Thread not found"
            },
            "403": {
                "description": "Authtenticated, but access level is not enough"
            }
        }
    }
}