{
    "get": {
        "tags": [
            "packages"
        ],
        "summary": "Get package by ID",
        "operationId": "getPackage",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "security": [
            {
                "Bearer": []
            }
        ],
        "parameters": [
            {
                "in": "path",
                "name": "id",
                "description": "ID of the package",
                "required": true,
                "type": "string"
            }
        ],
        "responses": {
            "200": {
                "description": "Package with the specific ID",
                "schema": {
                    "$ref": "./models/package.json"
                }
            },
            "404": {
                "description": "Package not found"
            },
            "401": {
                "description": "Unauthorized"
            }
        }
    },
    "put": {
        "tags": [
            "packages"
        ],
        "summary": "Updates a specific package (must have coordinator credentials)",
        "operationId": "updatePackage",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "security": [
            {
                "Bearer": []
            }
        ],
        "parameters": [
            {
                "in": "path",
                "name": "id",
                "description": "ID of the package",
                "required": true,
                "type": "string"
            },
            {
                "in": "body",
                "name": "package",
                "description": "New package data",
                "required": true,
                "schema": {
                    "type": "object",
                    "required": [
                        "name",
                        "price",
                        "vat"
                    ],
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "price": {
                            "type": "integer"
                        },
                        "vat": {
                            "type": "integer"
                        }
                    }
                }
            }
        ],
        "responses": {
            "200": {
                "description": "Updated package",
                "schema": {
                    "$ref": "./models/package.json"
                }
            },
            "400": {
                "description": "Invalid payload"
            },
            "401": {
                "description": "Unauthorized"
            },
            "404": {
                "description": "Invalid package ID"
            },
            "417": {
                "description": "Unable to update the package"
            },
            "403": {
                "description": "Valid authorization, but not enough credentials"
            }
        }
    },
    "delete": {
        "tags": [
            "packages"
        ],
        "summary": "Deletes a package (must have at least coordinator credentials)",
        "operationId": "deletePackage",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "security": [
            {
                "Bearer": []
            }
        ],
        "parameters": [
            {
                "in": "path",
                "name": "id",
                "description": "ID of the package",
                "required": true,
                "type": "string"
            }
        ],
        "responses": {
            "200": {
                "description": "Deleted package",
                "schema": {
                    "$ref": "./models/package.json"
                }
            },
            "401": {
                "description": "Unauthorized"
            },
            "404": {
                "description": "Meeting not found"
            },
            "403": {
                "description": "Valid authorization, but not enough credentials"
            }
        }
    }
}