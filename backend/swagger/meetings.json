{
    "post": {
        "tags": [
            "meetings"
        ],
        "summary": "Creates a meeting (must have at least coordinator credentials)",
        "operationId": "createMeeting",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "security": [
            {
                "Bearer": []
            }
        ],
        "parameters": [
            {
                "in": "body",
                "name": "payload",
                "description": "New meeting data",
                "required": true,
                "schema": {
                    "type": "object",
                    "required": [
                        "title",
                        "kind",
                        "begin",
                        "end",
                        "local"
                    ],
                    "properties": {
                        "title": {
                            "type": "string"
                        },
                        "kind": {
                            "type": "string",
                            "enum": [
                                "EVENT",
                                "TEAM",
                                "COMPANY"
                            ]
                        },
                        "begin": {
                            "type": "string",
                            "format": "date-time"
                        },
                        "end": {
                            "type": "string",
                            "format": "date-time"
                        },
                        "local": {
                            "type": "string"
                        }
                    }
                }
            }
        ],
        "responses": {
            "200": {
                "description": "Created meeting",
                "schema": {
                    "$ref": "./models/meeting.json"
                }
            },
            "400": {
                "description": "Invalid payload, or couldn't create meeting"
            },
            "401": {
                "description": "Unauthorized"
            },
            "403": {
                "description": "Valid authorization, but not enough credentials"
            }
        }
    },
    "get": {
        "tags": [
            "meetings"
        ],
        "summary": "Gets all meetings",
        "operationId": "getMeetings",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "security": [
            {
                "Bearer": []
            }
        ],
        "parameters": [
            {
                "in": "query",
                "name": "event",
                "description": "Meeting from this event",
                "type": "integer",
                "format": "int64"
            },
            {
                "in": "query",
                "name": "team",
                "description": "Meeting from this team",
                "type": "string"
            },
            {
                "in": "query",
                "name": "company",
                "description": "Meeting from this company",
                "type": "string"
            }
        ],
        "responses": {
            "200": {
                "description": "Meetings filtered by query",
                "schema": {
                    "type": "array",
                    "items": {
                        "$ref": "./models/meeting.json"
                    }
                }
            },
            "400": {
                "description": "Bad query"
            },
            "401": {
                "description": "Unauthorized"
            }
        }
    }
}