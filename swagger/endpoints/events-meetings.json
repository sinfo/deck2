{
    "post": {
        "tags": [
            "events", "meetings"
        ],
        "summary": "Creates and adds a new meeting to the current event",
        "operationId": "addEventMeeting",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "parameters": [
            {
                "in": "body",
                "name": "meeting",
                "description": "Meeting to store on the current event",
                "required": true,
                "schema": {
                    "type": "object",
                    "required": [
                        "begin", "end", "place"
                    ],
                    "properties": {
                        "begin": {
                            "type": "string",
                            "format": "date-time"
                        },
                        "end": {
                            "type": "string",
                            "format": "date-time"
                        },
                        "place": {
                            "type": "string"
                        }
                    }
                }
            }
        ],
        "responses": {
            "200": {
                "description": "Updated event",
                "schema": {
                    "$ref": "./models/event.json"
                }
            },
            "400": {
                "description": "Invalid payload"
            },
            "404": {
                "description": "Event not found"
            },
            "417": {
                "description": "Unable to create or add meeting"
            }
        }
    }
}