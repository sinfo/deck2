{
    "post": {
        "tags": [
            "members", "contacts"
        ],
        "summary": "Creates a member's contact",
        "operationId": "createMemberContact",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "security": [
            {
              "Bearer": []
            }
          ],
        "parameters": [
            {
                "in": "path",
                "name": "id",
                "description": "ID of the member",
                "required": true,
				"type": "string"
            },
            {
                "in": "body",
                "name": "payload",
                "description": "New contact data",
                "required": true,
                "schema": {
                    "type": "object",
                    "required": [
                        "phones", "socials", "mails"
                    ],
                    "properties": {
                        "phones": {
                            "type": "array",
                            "items":{
                                "type":"object",
                                "required":[
                                    "phone", "valid"
                                ],
                                "properties":{
                                    "phone":{
                                        "type":"string"
                                    },
                                    "valid":{
                                        "type":"boolean"
                                    }
                                }
                            }
                        },
                        "socials":{
                            "type":"object",
                            "required":[
                                "facebook", "skype", "github", "twitter", "linkedin"
                            ],
                            "properties":{
                                "facebook":{
                                    "type":"string"
                                },
                                "skype":{
                                    "type":"string"
                                },
                                "github":{
                                    "type":"string"
                                },
                                "twitter":{
                                    "type":"string"
                                },
                                "linkedin":{
                                    "type":"string"
                                }
                            }
                        },
                        "mails": {
                            "type": "array",
                            "items":{
                                "type":"object",
                                "required":[
                                    "mail", "valid", "personal"
                                ],
                                "properties":{
                                    "phone":{
                                        "type":"string"
                                    },
                                    "valid":{
                                        "type":"boolean"
                                    },
                                    "personal":{
                                        "type":"boolean"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        ],
        "responses": {
            "200": {
                "description": "Updated member",
                "schema": {
                    "$ref": "./models/member.json"
                }
            },
            "400": {
                "description": "Invalid payload, or couldn't update member"
            },
            "401": {
                "description": "Unauthorized"
            },
            "404": {
                "description": "Couldn't find member"
            }
        }
    }
}