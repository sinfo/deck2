{
  "get": {
    "tags": [
      "sessions"
    ],
    "summary": "Get session by ID",
    "operationId": "getSession",
    "consumes": [
      "application/json"
    ],
    "produces": [
      "application/json"
    ],
    "security": [
      {
        "Bearer": []
      }
    ],
    "parameters": [
      {
        "in": "path",
        "name": "id",
        "description": "ID of the session",
        "required": true,
        "type": "string"
      }
    ],
    "responses": {
      "200": {
        "description": "Session with the specific ID",
        "schema": {
          "$ref": "./models/session.json"
        }
      },
      "401": {
        "description": "Unauthorized"
      },
      "404": {
        "description": "Session not found"
      }
    }
  },
  "put": {
    "tags": [
      "sessions"
    ],
    "summary": "Updates session (must have coordinator credentials)",
    "operationId": "updateSession",
    "consumes": [
      "application/json"
    ],
    "produces": [
      "application/json"
    ],
    "security": [
      {
        "Bearer": []
      }
    ],
    "parameters": [
      {
        "in": "path",
        "name": "id",
        "description": "ID of the session",
        "required": true,
        "type": "string"
      },
      {
        "in": "body",
        "name": "session",
        "description": "New session data\n - kind: TALK, PRESENTATION or WORKSHOP\n - if kind=TALK, then speaker must be specified\n - if kind=PRESENTATION or kind=WORKSHOP, then company must be specified\n - place is optional\n - videoURL is optional",
        "required": true,
        "schema": {
          "type": "object",
          "required": [
            "begin",
            "end",
            "title",
            "description",
            "kind"
          ],
          "properties": {
            "begin": {
              "type": "string",
              "format": "date-time"
            },
            "end": {
              "type": "string",
              "format": "date-time"
            },
            "title": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "place": {
              "type": "string"
            },
            "kind": {
              "type": "string",
              "enum": [
                "TALK",
                "PRESENTATION",
                "WORKSHOP"
              ]
            },
            "company": {
              "type": "string"
            },
            "speaker": {
              "type": "string"
            },
            "videoURL": {
              "type": "string"
            },
            "tickets": {
              "type": "object",
              "properties": {
                "start": {
                  "type": "string",
                  "format": "date-time"
                },
                "end": {
                  "type": "string",
                  "format": "date-time"
                },
                "max": {
                  "type": "integer"
                }
              }
            }
          }
        }
      }
    ],
    "responses": {
      "200": {
        "description": "Updated session",
        "schema": {
          "$ref": "./models/session.json"
        }
      },
      "400": {
        "description": "Invalid payload"
      },
      "401": {
        "description": "Unauthorized"
      },
      "404": {
        "description": "Session not found"
      },
      "417": {
        "description": "Unable to update session"
      },
      "403": {
        "description": "Valid authorization, but not enough credentials"
      }
    }
  }
}