{
    "get": {
        "tags": [
            "events", "public"
        ],
        "summary": "Public endpoint for getting all events",
        "operationId": "getEventsPublic",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "parameters": [
            {
                "in": "query",
                "name": "name",
                "description": "Name of the event",
                "type": "string"
            },
            {
                "in": "query",
                "name": "before",
                "description": "Event happened before this date",
                "type": "string",
                "format": "date-time"
            },
            {
                "in": "query",
                "name": "after",
                "description": "Event happened after this date",
                "type": "string",
                "format": "date-time"
            },
            {
                "in": "query",
                "name": "during",
                "description": "Event happened during this date",
                "type": "string",
                "format": "date-time"
            }
        ],
        "responses": {
            "200": {
                "description": "Events filtered by the query",
                "schema": {
                    "type": "array",
                    "items": {
                        "$ref": "./models/public-event.json"
                    }
                }
            },
            "400": {
                "description": "Invalid date format on query"
            },
            "417": {
                "description": "Unable to get events"
            }
        }
    }
}