{
    "get": {
        "tags": [
            "items"
        ],
        "summary": "Get item by ID",
        "operationId": "getItem",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "security": [
            {
              "Bearer": []
            }
          ],
        "parameters": [
            {
                "in": "path",
                "name": "id",
                "description": "ID of the item",
                "required": true,
				"type": "string"
            }
        ],
        "responses": {
            "200": {
                "description": "Item with the specific ID",
                "schema": {
                    "$ref": "./models/item.json"
                }
            },
            "401": {
                "description": "Unauthorized"
            },
            "404": {
                "description": "Item not found"
            }
        }
    },
    "put": {
        "tags": [
            "items"
        ],
        "summary": "Updates an item (must have coordinator credentials)",
        "operationId": "updateItem",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "security": [
            {
              "Bearer": []
            }
          ],
        "parameters": [
            {
                "in": "body",
                "name": "payload",
                "description": "Information needed to update the item.",
                "required": true,
                "schema": {
                    "type": "object",
                    "required": [
                        "name", "type", "description", "price", "vat"
                    ],
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "type": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        },
                        "price": {
                            "type": "integer"
                        },
                        "vat": {
                            "type": "integer"
                        }
                    }
                }
            },
            {
                "in": "path",
                "name": "id",
                "description": "ID of the item",
                "required": true,
				"type": "string"
            }
        ],
        "responses": {
            "200": {
                "description": "Updated item.",
                "schema": {
                    "$ref": "./models/item.json"
                }
            },
            "400": {
                "description": "Invalid input or couldn't updated the item."
            },
            "401": {
                "description": "Unauthorized"
            },
            "404": {
                "description": "Item not found"
            }
        }
    }
}