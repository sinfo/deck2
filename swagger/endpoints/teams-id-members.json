{
    "post": {
        "tags": [
            "teams", "members"
        ],
        "summary": "Add a new member to the team (must have coordinator credentials)",
        "operationId": "addTeamMember",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "security": [
            {
              "Bearer": []
            }
          ],
        "parameters": [
            {
                "in": "path",
                "name": "id",
                "description": "ID of the team",
                "required": true,
				"type": "string"
            },
            {
                "in": "body",
                "name": "payload",
                "description": "New member data",
                "required": true,
                "schema": {
                    "type": "object",
                    "required": [
                        "member", "role"
                    ],
                    "properties": {
                        "member": {
                            "type": "string"
                        },
                        "role": {
                            "type": "string",
                            "enum": ["MEMBER", "TEAMLEADER", "COORDINATOR", "ADMIN"]
                        }
                    }
                }
            }
        ],
        "responses": {
            "200": {
                "description": "Team with the added member",
                "schema": {
                    "$ref": "./models/team.json"
                }
            },
            "400":{
                "description": "Bad name or role on payload"
            },
            "401": {
                "description": "Unauthorized"
            },
            "404": {
                "description": "Team or member not found"
            },
            "403": {
                "description": "Valid authorization, but not enough credentials"
            }
        }
    },
    "put": {
        "tags": [
            "teams", "members"
        ],
        "summary": "Updates a member's role on the team (must have coordinator credentials)",
        "operationId": "updateTeamMemberRole",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "security": [
            {
              "Bearer": []
            }
          ],
        "parameters": [
            {
                "in": "path",
                "name": "id",
                "description": "ID of the team",
                "required": true,
				"type": "string"
            },
            {
                "in": "body",
                "name": "payload",
                "description": "New member data",
                "required": true,
                "schema": {
                    "type": "object",
                    "required": [
                        "member", "role"
                    ],
                    "properties": {
                        "member": {
                            "type": "string"
                        },
                        "role":{
                            "type": "string"
                        }
                    }
                }
            }
        ],
        "responses": {
            "200": {
                "description": "Team with the updated member",
                "schema": {
                    "$ref": "./models/team.json"
                }
            },
            "400":{
                "description": "Bad name or role on payload"
            },
            "401": {
                "description": "Unauthorized"
            },
            "404": {
                "description": "Team or member not found"
            },
            "403": {
                "description": "Valid authorization, but not enough credentials"
            }
        }
    },
    "delete": {
        "tags": [
            "teams", "members"
        ],
        "summary": "Removes a member from the team (must have coordinator credentials)",
        "operationId": "deleteTeamMember",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "security": [
            {
              "Bearer": []
            }
          ],
        "parameters": [
            {
                "in": "path",
                "name": "id",
                "description": "ID of the team",
                "required": true,
				"type": "string"
            },
            {
                "in": "body",
                "name": "payload",
                "description": "New member data",
                "required": true,
                "schema": {
                    "type": "object",
                    "required": [
                        "member"
                    ],
                    "properties": {
                        "member": {
                            "type": "string"
                        }
                    }
                }
            }
        ],
        "responses": {
            "200": {
                "description": "Team without the removed member",
                "schema": {
                    "$ref": "./models/team.json"
                }
            },
            "400":{
                "description": "Bad name or role on payload"
            },
            "401": {
                "description": "Unauthorized"
            },
            "404": {
                "description": "Team or member not found"
            },
            "403": {
                "description": "Valid authorization, but not enough credentials"
            }
        }
    }
}