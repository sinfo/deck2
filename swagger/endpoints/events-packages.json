{
    "post": {
        "tags": [
            "events", "packages"
        ],
        "summary": "Add template to packages of the current event and make it available",
        "operationId": "addEventPackage",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "parameters": [
            {
                "in": "body",
                "name": "template",
                "description": "Package (template) to store on the current event",
                "required": true,
                "schema": {
                    "type": "object",
                    "required": [
                        "template", "public_name"
                    ],
                    "properties": {
                        "template": {
                            "type": "string"
                        },
                        "public_name": {
                            "type": "string"
                        }
                    }
                }
            }
        ],
        "responses": {
            "200": {
                "description": "Event with the updated packages",
                "schema": {
                    "$ref": "./models/event.json"
                }
            },
            "400": {
                "description": "Invalid payload"
            },
            "404": {
                "description": "Event not found, or package not found"
            },
            "417": {
                "description": "Unable to save package on event"
            }
        }
    }
}