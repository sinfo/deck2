{
    "put": {
        "tags": [
            "contacts"
        ],
        "summary": "Updates a contact's mail list",
        "operationId": "updateMail",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "security": [
            {
              "Bearer": []
            }
          ],
        "parameters": [
            {
                "in": "path",
                "name": "id",
                "description": "ID of the member",
                "required": true,
                "type": "string"
            },
            {
                "in": "body",
                "name": "payload",
                "description": "Updated mail list",
                "required": true,
                "schema": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "mail",
                            "valid",
                            "personal"
                        ],
                        "properties": {
                            "mail": {
                                "type": "string"
                            },
                            "valid": {
                                "type": "boolean"
                            },
                            "personal": {
                                "type": "boolean"
                            }
                        }
                    }
                }
            }
        ],
        "responses": {
            "200": {
                "description": "Updated contact.",
                "schema": {
                    "$ref": "./models/contact.json"
                }
            },
            "401": {
                "description": "Unauthorized"
            },
            "400": {
                "description": "Invalid input or couldn't updated the contact."
            },
            "404": {
                "description": "Could not find contact"
            }
        }
    },
    "post": {
        "tags": [
            "contacts"
        ],
        "summary": "Addsa new mail to a contact's mail list",
        "operationId": "addMail",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "security": [
            {
              "Bearer": []
            }
          ],
        "parameters": [
            {
                "in": "path",
                "name": "id",
                "description": "ID of the member",
                "required": true,
                "type": "string"
            },
            {
                "in": "body",
                "name": "payload",
                "description": "New phone",
                "required": true,
                "schema": {
                    "type": "object",
                    "required": [
                        "phone",
                        "valid",
                        "personal"
                    ],
                    "properties": {
                        "phone": {
                            "type": "string"
                        },
                        "valid": {
                            "type": "boolean"
                        },
                        "personal": {
                            "type": "boolean"
                        }
                    }
                }
            }
        ],
        "responses": {
            "200": {
                "description": "Updated contact.",
                "schema": {
                    "$ref": "./models/contact.json"
                }
            },
            "401": {
                "description": "Unauthorized"
            },
            "400": {
                "description": "Invalid input or couldn't updated the contact."
            },
            "404": {
                "description": "Could not find contact"
            }
        }
    }
}