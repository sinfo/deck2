{
    "post": {
        "tags": [
            "teams", "members"
        ],
        "summary": "Add a new member to the team",
        "operationId": "addTeamMember",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "parameters": [
            {
                "in": "path",
                "name": "id",
                "description": "ID of the team",
                "required": true,
				"type": "string"
            },
            {
                "in": "body",
                "name": "payload",
                "description": "New member data",
                "required": true,
                "schema": {
                    "type": "object",
                    "required": [
                        "member", "role"
                    ],
                    "properties": {
                        "member": {
                            "type": "string"
                        },
                        "role":{
                            "type": "string"
                        }
                    }
                }
            }
        ],
        "responses": {
            "200": {
                "description": "Team with the added member",
                "schema": {
                    "$ref": "./models/team.json"
                }
            },
            "400":{
                "description": "Bad name or role on payload"
            },
            "404": {
                "description": "Team or member not found"
            }
        }
    },
    "put": {
        "tags": [
            "teams", "members"
        ],
        "summary": "Updates a member's role on the team",
        "operationId": "updateTeamMemberRole",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "parameters": [
            {
                "in": "path",
                "name": "id",
                "description": "ID of the team",
                "required": true,
				"type": "string"
            },
            {
                "in": "body",
                "name": "payload",
                "description": "New member data",
                "required": true,
                "schema": {
                    "type": "object",
                    "required": [
                        "member", "role"
                    ],
                    "properties": {
                        "member": {
                            "type": "string"
                        },
                        "role":{
                            "type": "string"
                        }
                    }
                }
            }
        ],
        "responses": {
            "200": {
                "description": "Team with the updated member",
                "schema": {
                    "$ref": "./models/team.json"
                }
            },
            "400":{
                "description": "Bad name or role on payload"
            },
            "404": {
                "description": "Team or member not found"
            }
        }
    },
    "delete": {
        "tags": [
            "teams", "members"
        ],
        "summary": "Removes a member from the team",
        "operationId": "deleteTeamMember",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "parameters": [
            {
                "in": "path",
                "name": "id",
                "description": "ID of the team",
                "required": true,
				"type": "string"
            },
            {
                "in": "body",
                "name": "payload",
                "description": "New member data",
                "required": true,
                "schema": {
                    "type": "object",
                    "required": [
                        "member"
                    ],
                    "properties": {
                        "member": {
                            "type": "string"
                        }
                    }
                }
            }
        ],
        "responses": {
            "200": {
                "description": "Team without the removed member",
                "schema": {
                    "$ref": "./models/team.json"
                }
            },
            "400":{
                "description": "Bad name or role on payload"
            },
            "404": {
                "description": "Team or member not found"
            }
        }
    }
}