{
    "get": {
        "tags": [
            "members"
        ],
        "summary": "Get member by ID",
        "operationId": "getMember",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "security": [
            {
              "Bearer": []
            }
          ],
        "parameters": [
            {
                "in": "path",
                "name": "id",
                "description": "ID of the member",
                "required": true,
				"type": "string"
            }
        ],
        "responses": {
            "200": {
                "description": "Member with the specific ID",
                "schema": {
                    "$ref": "./models/member.json"
                }
            },
            "401": {
                "description": "Unauthorized"
            },
            "404": {
                "description": "Member not found"
            }
        }
    },
    "put": {
        "tags": [
            "members"
        ],
        "summary": "Updates a member (must have coordinator credentials)",
        "operationId": "updateMember",
        "consumes": [
            "application/json"
        ],
        "produces": [
            "application/json"
        ],
        "security": [
            {
              "Bearer": []
            }
          ],
        "parameters": [
            {
                "in": "body",
                "name": "payload",
                "description": "Information needed to update the member.",
                "required": true,
                "schema": {
                    "type": "object",
                    "required": [
                        "name", "img", "istid"
                    ],
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "img": {
                            "type": "string"
                        },
                        "istid": {
                            "type": "string"
                        }
                    }
                }
            },
            {
                "in": "path",
                "name": "id",
                "description": "ID of the member",
                "required": true,
				"type": "string"
            }
        ],
        "responses": {
            "200": {
                "description": "Updated team.",
                "schema": {
                    "$ref": "./models/member.json"
                }
            },
            "400": {
                "description": "Invalid input or couldn't updated the  team."
            },
            "401": {
                "description": "Unauthorized"
            }
        }
    }
}