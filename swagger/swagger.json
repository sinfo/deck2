		},
		"/contacts/{id}/mail":{
			"$ref": "./endpoints/contacts-id-mail.json"
		},
		"/contacts/{id}/socials":{
			"$ref": "./endpoints/contacts-id-socials.json"
		},
		"/meetings":{
			"$ref":"./endpoints/meetings.json"
		},
