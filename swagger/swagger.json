		"/companies/{id}/thread": {
			"$ref": "./endpoints/companies-id-thread.json"
		},
		"/teams": {
			"$ref": "./endpoints/teams.json"
		},
		"/teams/{id}": {
			"$ref": "./endpoints/teams-id.json"
		},
		"/teams/{id}/members":{
			"$ref": "./endpoints/teams-id-members.json"
		},
		"/teams/{id}/meetings":{
			"$ref": "./endpoints/teams-id-meetings.json"
		},
		"/teams/{id}/meetings/{meetingID}":{
			"$ref": "./endpoints/teams-id-meetings-meetingid.json"
