		"/posts/{id}": {
			"$ref": "./endpoints/posts-id.json"
		},
		"/public/members":{
			"$ref": "./endpoints/public-members.json"
		},
		"/public/members/{id}":{
			"$ref": "./endpoints/public-members-id.json"
		},
		"/members":{
			"$ref": "./endpoints/members.json"
		},
		"/members/{id}":{
			"$ref":"./endpoints/members-id.json"
		},
